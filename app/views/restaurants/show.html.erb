<div class="container col-6">
<h1><%= @restaurant.name %></h1>
    <h2><%= @restaurant.category %></h2>
    <p><%= "#{@restaurant.address} / #{@restaurant.phone_number}"%> </p>
    <%= link_to "Restaurants list", restaurants_path, class: "btn btn-primary" %>
     <%= link_to "New Review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
    <hr>
    <p><strong>Reviews</strong></p>
    <ul class = "list-group">
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= " Rate: #{review.rating} /  #{review.content}" %></li>
    <% end %>
     </ul>
</div>
