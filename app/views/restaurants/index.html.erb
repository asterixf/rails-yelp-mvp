<div class="container col-8 text-center">
<h1>Restaurants</h1>
<%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-primary" %>
<hr>
  <% @restaurants.each do |restaurant| %>
    <h1><%= link_to restaurant.name, restaurant_path(restaurant) %></h1>
    <h2><%= restaurant.category %></h2>
    <p><%= "#{restaurant.address} / #{restaurant.phone_number}"%></p>
    <hr>
  <% end %>
</div>
